{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es2017"],
        "rootDir": "./src/",
        "outDir": "./build/",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/app.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}